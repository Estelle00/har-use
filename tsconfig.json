{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "target": "ES2019",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["ESNext", "dom"],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "paths": {
      "@har/use": ["./src/index.ts"],
      "@/*": ["src/*"]
    },
    "types": ["@dcloudio/types", "ts-jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/.vitepress/*", "src/vite.config.ts"]
}
